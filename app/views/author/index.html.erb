<div class="min-h-full">
  <nav class="bg-gray-800">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 items-center justify-between">
        <div class="flex items-center">
          <div class="hidden md:block">
            <div class="flex items-baseline space-x-4">
              <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
              <a href="books" class="bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium" aria-current="page">Books</a>
              <a href="authors" class="bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium" aria-current="page">Authors</a>

            </div>
          </div>
        </div>
        <div class="hidden md:block">
          <div class="ml-4 flex items-center md:ml-6">
            <div class="ml-10 flex items-baseline space-x-4">
              <%= button_to "Log Out", destroy_account_session_path, method: :delete, class: "text-white rounded-md px-3 py-2 text-sm font-medium" %>
            </div>

          </div>
        </div>
        <div class="-mr-2 flex md:hidden">
          <!-- Mobile menu button -->
          <button type="button" class="relative inline-flex items-center justify-center rounded-md bg-gray-800 p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800" aria-controls="mobile-menu" aria-expanded="false">
            <span class="absolute -inset-0.5"></span>
            <span class="sr-only">Open main menu</span>
            <!-- Menu open: "hidden", Menu closed: "block" -->
            <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
            <!-- Menu open: "block", Menu closed: "hidden" -->
            <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>

  </nav>

  <header class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Daftar Author</h1>
    </div>
  </header>
  <main>
    <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
      <button class="bg-blue-600 text-white rounded-md px-3 py-2 text-sm font-medium mb-5"><a href="/books/create" >Tambah Author</a></button>

      <table class="min-w-full bg-white rounded-lg overflow-hidden shadow-lg">
        <thead class="bg-gray-800 text-white">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Full Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Nationality</th>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Email</th>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Birth Date</th>
            </tr>
        </thead>
        <tbody>
          <% @authors.each do |author| %>
            <tr class="hover:bg-blue-100">
                <td class="px-6 py-4 whitespace-nowrap"><%= author.first_name%></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= author.nationality%></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= author.email%></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= author.birth_date%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="mt-5">
        <ul class="flex">
          <span class="mr-2">Halaman :</span>
          <% for page in 1..@total_page_author %>
          <li class="mr-1">
            <button><%= link_to "#{page}", "/books?page=#{page}", class: "bg-blue-600 text-white hover:bg-blue-700 px-3 py-2 rounded" %></button>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </main>
</div>
